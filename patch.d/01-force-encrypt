#!/sbin/sh

. "$env"

print "Enabling forced encryption in the fstab..."

found_fstab=false

for fstab in fstab.*; do
	[ -f "$fstab" ] || continue
	print "Found fstab: $fstab"
	sed -i "
		s/\bencryptable=/forceencrypt=/g
	" "$fstab"
	found_fstab=true
done

$found_fstab || print "Unable to find the fstab!"

exit 0
